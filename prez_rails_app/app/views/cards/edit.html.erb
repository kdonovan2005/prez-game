<h1>Edit this Card!</h1>
  <%= form_for(@card) do |f| %>
<label>Card Name:</label>
  <%= f.text_field :name %>
<br><br>
<label>Description</label>
  <%= f.text_area :description %>
<br><br>
<label>Picture URL</label>
  <%= f.text_field :pic_url %>
<br><br>
<label>FAQ</label>
  <%= f.text_area :faq %>
<br><br>
<label>Max number of this card:</label>
  <%= f.text_field :frequency %>
<br><br>
  <%= f.submit "This is Thriller!" %>

<% end %>
